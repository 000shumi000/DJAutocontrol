<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_activity_linearLayout2"
        android:orientation="vertical">
        <Button
            android:id="@+id/drone_status_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/drone_status" />

        <Button
            android:id="@+id/camera_fpv_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/camera_fpv" />

        <Button
            android:id="@+id/remote_control_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/remote_control" />

        <Button
            android:id="@+id/gps_location_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gps_location" />

        <Button
            android:id="@+id/picture_location_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/picture_location" />

        <Button
            android:id="@+id/site_landing_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/site_landing" />

        <Button
            android:id="@+id/automatic_handle_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/automatic_handle" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_activity_linearLayout2"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"

            android:text="@string/copy_right" />
    </LinearLayout>
</RelativeLayout>
