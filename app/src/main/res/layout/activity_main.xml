<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/drone_status_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/drone_status" />

        <Button
            android:id="@+id/camera_fpv_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/camera_fpv" />

        <Button
            android:id="@+id/remote_control_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/remote_control" />

        <Button
            android:id="@+id/auto_charge_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/auto_charge_" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            android:text="@string/copy_right" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>